<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageSignActivity">

    <Button
        android:id="@+id/sigPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pageInsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Bienvenue sur GrimMed !"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/enterEmail"
        android:layout_width="325dp"
        android:layout_height="52dp"
        android:background="#A4D0F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/caseIdEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your email address" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/enterUserName"
        android:layout_width="325dp"
        android:layout_height="52dp"
        android:layout_marginTop="64dp"
        android:background="#A4D0F3"
        app:layout_constraintEnd_toEndOf="@+id/enterEmail"
        app:layout_constraintStart_toStartOf="@+id/enterEmail"
        app:layout_constraintTop_toBottomOf="@+id/enterEmail"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/caseId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your username" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/enterPasswd"
        android:layout_width="325dp"
        android:layout_height="52dp"
        android:layout_marginTop="64dp"
        android:background="#A4D0F3"
        app:layout_constraintEnd_toEndOf="@+id/enterUserName"
        app:layout_constraintStart_toStartOf="@+id/enterUserName"
        app:layout_constraintTop_toBottomOf="@+id/enterUserName">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/casePasswd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your password" />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>