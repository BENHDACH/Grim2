<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageDrugBox"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drugbox" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="405dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDrugBox">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagewarning"
                    android:layout_width="29dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/imagewarning" />

                <TextView
                    android:id="@+id/textcompo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="Composition:"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textCompo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_page"
                android:backgroundTint="#3C6CA6"
                android:padding="16dp"
                android:text="Tab 3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagebourse"
                    android:layout_width="29dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="25dp"
                    app:srcCompat="@drawable/bourse" />

                <TextView
                    android:id="@+id/textprix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Prix:"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_page"
                android:backgroundTint="#3C6CA6"
                android:padding="16dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagecontreindic"
                    android:layout_width="29dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="25dp"
                    app:srcCompat="@drawable/contreindication" />

                <TextView
                    android:id="@+id/textcontrindication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:text="Contre indication :"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textContreIndic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_page"
                android:backgroundTint="#3C6CA6"
                android:padding="16dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>